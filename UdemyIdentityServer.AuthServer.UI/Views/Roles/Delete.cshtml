@model UdemyIdentityServer.Database.Models.Roles

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Sil</h1>

<h3>Silmek istediğinize emin misiniz?</h3>
<div>
    
    <dl class="row">
        <dt class = "col-sm-2">
            <label>İsim</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger btn-sm" /> 
        <a class="btn btn-primary btn-sm" asp-action="Index">Geri</a>
    </form>
</div>
