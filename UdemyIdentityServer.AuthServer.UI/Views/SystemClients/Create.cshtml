@model UdemyIdentityServer.Database.Models.SystemClients

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="ModalCreateGoal" class="app-content">
    @await Component.InvokeAsync("DashBoardNavbar")
    <div class="d-flex flex-wrap flex-stack my-1">
        <h3 class="fw-bold my-2">
            System Client
        </h3>
        <div class="d-flex my-2">
            <a class='btn btn-secondary btn-sm fw-bolder' asp-action="Index">Geri</a>
        </div>
    </div>
    <div class="card">
        <div class="row">
            <div class="col-md-12 ml-auto">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="ClientId" class="control-label"></label>
                        <input asp-for="ClientId" class="form-control" />
                        <small class="form-text text-muted">Uygulamaya özgü benzersiz kimlik (Client ID).</small>
                        <span asp-validation-for="ClientId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="RequirePkce" class="control-label"></label>
                        <input asp-for="RequirePkce" class="form-control" />
                        <small class="form-text text-muted">PKCE (Proof Key for Code Exchange) gerekip gerekmediğini belirler. Güvenlik için önerilir.</small>
                        <span asp-validation-for="RequirePkce" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ClientName" class="control-label"></label>
                        <input asp-for="ClientName" class="form-control" />
                        <small class="form-text text-muted">Uygulamanın görünen adı.</small>
                        <span asp-validation-for="ClientName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ClientSecrets" class="control-label"></label>
                        <input asp-for="ClientSecrets" class="form-control" />
                        <small class="form-text text-muted">Kimlik doğrulama için kullanılan gizli anahtarlar.</small>
                        <span asp-validation-for="ClientSecrets" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="AllowedGrantTypes" class="control-label"></label>
                        <input asp-for="AllowedGrantTypes" class="form-control" />
                        <small class="form-text text-muted">İzin verilen yetkilendirme tipleri (örn: authorization_code, client_credentials).</small>
                        <span asp-validation-for="AllowedGrantTypes" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="AllowedGrantTypeExplanation" class="control-label"></label>
                        <input asp-for="AllowedGrantTypeExplanation" class="form-control" />
                        <small class="form-text text-muted">Seçilen yetkilendirme tiplerinin açıklaması.</small>
                        <span asp-validation-for="AllowedGrantTypeExplanation" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="RedirectUris" class="control-label"></label>
                        <input asp-for="RedirectUris" class="form-control" />
                        <small class="form-text text-muted">Başarılı oturum açma sonrası yönlendirilecek URL'ler.</small>
                        <span asp-validation-for="RedirectUris" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="PostLogoutRedirectUris" class="control-label"></label>
                        <input asp-for="PostLogoutRedirectUris" class="form-control" />
                        <small class="form-text text-muted">Çıkış yaptıktan sonra yönlendirilecek URL'ler.</small>
                        <span asp-validation-for="PostLogoutRedirectUris" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="AccessTokenLifetime" class="control-label"></label>
                        <input asp-for="AccessTokenLifetime" class="form-control" />
                        <small class="form-text text-muted">Erişim token'ının geçerlilik süresi (saniye cinsinden).</small>
                        <span asp-validation-for="AccessTokenLifetime" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="AllowOfflineAccess" class="control-label"></label>
                        <input asp-for="AllowOfflineAccess" class="form-control" />
                        <small class="form-text text-muted">Offline erişim (refresh token kullanımı) izni.</small>
                        <span asp-validation-for="AllowOfflineAccess" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="RefreshTokenUsage" class="control-label"></label>
                        <input asp-for="RefreshTokenUsage" class="form-control" />
                        <small class="form-text text-muted">Refresh token kullanım politikası (örn: tekrar kullanılabilir veya tek kullanımlık).</small>
                        <span asp-validation-for="RefreshTokenUsage" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="RefreshTokenUsageExplanation" class="control-label"></label>
                        <input asp-for="RefreshTokenUsageExplanation" class="form-control" />
                        <small class="form-text text-muted">Refresh token kullanım politikasının açıklaması.</small>
                        <span asp-validation-for="RefreshTokenUsageExplanation" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="RefreshTokenExpiration" class="control-label"></label>
                        <input asp-for="RefreshTokenExpiration" class="form-control" />
                        <small class="form-text text-muted">Refresh token geçerlilik tipi (mutlak veya sliding).</small>
                        <span asp-validation-for="RefreshTokenExpiration" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="RefreshTokenExpirationExplanation" class="control-label"></label>
                        <input asp-for="RefreshTokenExpirationExplanation" class="form-control" />
                        <small class="form-text text-muted">Refresh token geçerlilik tipi hakkında detaylı açıklama.</small>
                        <span asp-validation-for="RefreshTokenExpirationExplanation" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="AbsoluteRefreshTokenLifetime" class="control-label"></label>
                        <input asp-for="AbsoluteRefreshTokenLifetime" class="form-control" />
                        <small class="form-text text-muted">Refresh token’ın maksimum geçerlilik süresi (saniye cinsinden).</small>
                        <span asp-validation-for="AbsoluteRefreshTokenLifetime" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="RequireConsent" class="control-label"></label>
                        <input asp-for="RequireConsent" class="form-control" />
                        <small class="form-text text-muted">Kullanıcıdan izin ekranı gösterilip gösterilmeyeceğini belirler.</small>
                        <span asp-validation-for="RequireConsent" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Yeni Oluştur" class="btn btn-primary" />
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
