@model RegisterViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <base href="../../../" />

    <title>ADASO Merkezi Giriş Sayfası</title>
    <meta charset="utf-8" />
    <meta name="description" content="ADASO Merkezi giriş sayfasına hoş geldiniz. Kullanıcı girişi yapabilir veya hesap oluşturabilirsiniz." />
    <meta name="keywords" content="ADASO,merkezi giriş, kullanıcı girişi, login, hesap, portal" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <meta property="og:locale" content="tr_TR" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="ADASO Merkezi Giriş Sayfası" />
    <meta property="og:description" content="Merkezi giriş sayfasına hoş geldiniz. Kullanıcı girişi yapabilir veya hesap oluşturabilirsiniz." />
    <meta property="og:url" content="https://www.authserverui.adasoportal.com" />
    <meta property="og:site_name" content="ADASO Merkezi Portal" />

    <link rel="canonical" href="https://www.authserverui.adasoportal.com" />

    <link rel="shortcut icon" href="/assets/media/logos/favicon.ico" />

    <link rel="icon" type="image/png" sizes="16x16" href="~/assets/media/logos/favicon.png" />

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Inter:300,400,500,600,700" />
    <link href="~/assets/plugins/global/plugins.bundle.css" rel="stylesheet" />
    <link href="~/assets/css/style.bundle.css" rel="stylesheet" />
    <link href="~/assets/css/style.css" rel="stylesheet" />
</head>

<body id="kt_body" class="app-blank">
    <script>var defaultThemeMode = "light"; var themeMode; if ( document.documentElement ) { if ( document.documentElement.hasAttribute("data-bs-theme-mode")) { themeMode = document.documentElement.getAttribute("data-bs-theme-mode"); } else { if ( localStorage.getItem("data-bs-theme") !== null ) { themeMode = localStorage.getItem("data-bs-theme"); } else { themeMode = defaultThemeMode; } } if (themeMode === "system") { themeMode = window.matchMedia("(prefers-color-scheme: dark)").matches ? "dark" : "light"; } document.documentElement.setAttribute("data-bs-theme", themeMode); }</script>

    <div class="d-flex flex-column flex-root" id="kt_app_root">

        <div class="d-flex flex-column flex-lg-row flex-column-fluid">

            <div class="d-flex flex-column flex-lg-row-fluid w-lg-50 p-10 order-2 order-lg-1">

                <div class="d-flex flex-center flex-column flex-lg-row-fluid">

                    <div class="w-lg-500px p-10">
                        <div class="w-lg-500px p-10">
                            <form asp-action="Register" method="post" enctype="multipart/form-data">

                                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                                <input type="hidden" name="ReturnUrl" value="@Model.ReturnUrl" />

                                <div class="text-center mb-11">
                                    <h1 class="text-dark fw-bolder mb-3">Kayıt Ol</h1>
                                    <div class="text-gray-500 fw-semibold fs-6">
                                        Buradan kaydolabilir ve ADASO Merkezi Kimlik Yönetimi üzerinden size uygun uygulamalara erişebilirsiniz.
                                    </div>
                                </div>

                                <!-- Name -->
                                <div class="fv-row mb-8">
                                    <input type="text" placeholder="Ad" asp-for="Name" autocomplete="off" class="form-control bg-transparent" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>

                                <!-- Surname -->
                                <div class="fv-row mb-8">
                                    <input type="text" placeholder="Soyad" asp-for="Surname" autocomplete="off" class="form-control bg-transparent" />
                                    <span asp-validation-for="Surname" class="text-danger"></span>
                                </div>

                                <!-- Email -->
                                <div class="fv-row mb-8">
                                    <input type="text" placeholder="Email" asp-for="Email" autocomplete="off" class="form-control bg-transparent" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <!-- Password -->
                                <div class="fv-row mb-8" data-kt-password-meter="true">
                                    <div class="position-relative mb-3">
                                        <input class="form-control bg-transparent" type="password" placeholder="Şifre" asp-for="Password" autocomplete="off" />
                                        <span class="btn btn-sm btn-icon position-absolute translate-middle top-50 end-0 me-n2" data-kt-password-meter-control="visibility">
                                            <i class="ki-outline ki-eye-slash fs-2"></i>
                                            <i class="ki-outline ki-eye fs-2 d-none"></i>
                                        </span>
                                    </div>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                    <div class="d-flex align-items-center mb-3" data-kt-password-meter-control="highlight">
                                        <div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px me-2"></div>
                                        <div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px me-2"></div>
                                        <div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px me-2"></div>
                                        <div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px"></div>
                                    </div>
                                    <div class="text-muted">En az 8 karakter kullanın, harf, sayı ve sembollerle karışık.</div>
                                </div>

                                <!-- Confirm Password -->
                                <div class="fv-row mb-8">
                                    <input placeholder="Şifre Tekrar" asp-for="ConfirmPassword" type="password" autocomplete="off" class="form-control bg-transparent" />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>

                                <!-- Country (Opsiyonel) -->
                                <div class="fv-row mb-8">
                                    <input type="text" placeholder="Ülke (Opsiyonel)" asp-for="Country" autocomplete="off" class="form-control bg-transparent" />
                                    <span asp-validation-for="Country" class="text-danger"></span>
                                </div>

                                <!-- City (Opsiyonel) -->
                                <div class="fv-row mb-8">
                                    <input type="text" placeholder="Şehir (Opsiyonel)" asp-for="City" autocomplete="off" class="form-control bg-transparent" />
                                    <span asp-validation-for="City" class="text-danger"></span>
                                </div>

                                <!-- Terms Checkbox -->
                                <div class="fv-row mb-8">
                                    <label class="form-check form-check-inline">
                                        <input type="checkbox" id="AcceptTerms" name="AcceptTerms" class="form-check-input" value="true" />
                                        
                                        <span class="form-check-label fw-semibold text-gray-700 fs-base ms-1">
                                            Kullanıcı sözleşmesini kabul ediyorum
                                            <a target="_blank" href="http://bit.ly/ADASO-Aydinlatma-Metni" class="ms-1 link-primary">Kullanım Şartları</a>
                                        </span>
                                    </label>
                                    <span id="AcceptTermsValidation" class="text-danger"></span>
                                </div>



                                <!-- Submit Button -->
                                <div class="d-grid mb-10">
                                    <button type="submit" class="btn btn-primary">
                                        <span class="indicator-label">Kayıt Ol</span>
                                        <span class="indicator-progress">
                                            Lütfen bekleyin...
                                            <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                                        </span>
                                    </button>
                                </div>

                                <div class="text-gray-500 text-center fw-semibold fs-6">
                                    Hesabınız var mı?<br />
                                    <a href="/account/login?ReturnUrl=@System.Net.WebUtility.UrlEncode(Model.ReturnUrl)" class="link-primary fw-semibold">Giriş Yap</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-flex flex-lg-row-fluid w-lg-50 bgi-size-cover bgi-position-center order-1 order-lg-2 adasologinBg">

                <div class="d-flex flex-column flex-center py-7 py-lg-15 px-5 px-md-15 w-100">

                    <a href="/" class="mb-0 mb-lg-12">
                        <img alt="Adana Sanayi Odası Logosu" src="assets/media/logos/ADASOlogo.png" class="h-75px h-lg-100px" />
                    </a>

                    <img class="d-none d-lg-block mx-auto w-450px w-md-50 w-xl-600px mb-10 mb-lg-20" src="assets/media/misc/adasoLoginBack.jpg" alt="Adana Sanayi Odası" />

                    <h1 class="d-none d-lg-block text-white fs-2qx fw-bolder text-center mb-7">
                        Dijital Dünyaya Güvenli Geçiş
                    </h1>

                    <div class="d-none d-lg-block text-white fs-base text-center">
                        Adana Sanayi Odası olarak, üyelerimize ve iş ortaklarımıza
                        <span class="fw-bold text-warning">yenilikçi, güvenilir ve hızlı</span> dijital hizmetler sunuyoruz.
                        <br /><br />
                        Bu platform, tüm yetkili kullanıcıların tek bir giriş ile
                        kurumsal bilgi, belge ve hizmetlere kesintisiz erişmesini sağlar.
                        <br />
                        Amacımız, sanayimizin dijital dönüşümünü destekleyerek
                        verimliliği ve rekabet gücünü artırmaktır.
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>var hostUrl = "assets/";</script>
    <script src="assets/plugins/global/plugins.bundle.js"></script>
    <script src="assets/js/scripts.bundle.js"></script>
    <script src="~/assets/js/customjs.js"></script>

    <!-- <script src="~/assets/js/custom/authentication/sign-up/general.js"></script>-->
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
 
    }
</body>
</html>