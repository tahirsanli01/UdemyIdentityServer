@{
    Layout = "_AuthLayout";
}

@model LoginViewModel
<div class="mb-10 text-center">
    <img src="~/assets/media/logos/ADASOlogo_Dark.png" alt="Logo" class="w-lg-275px" />
</div>

<h2 class="text-success mb-5">E-Postanız Başarıyla Doğrulandı ✔</h2>

<p style="font-size:16px; color:#333; line-height:1.6;">
    Sayın kullanıcımız, e-posta adresiniz başarıyla doğrulandı.
    Artık hesabınızı güvenle kullanabilirsiniz.
</p>

<div style="margin-top:25px;">
    <a href="/account/login?ReturnUrl=@System.Net.WebUtility.UrlEncode(Model?.ReturnUrl)"
       style="background-color:#007bff; color:#fff; text-decoration:none;
                  padding:12px 20px; border-radius:5px; font-weight:bold; display:inline-block;">
        Giriş Yap
    </a>
</div>

<p style="margin-top:20px; font-size:13px; color:#666;">
    Herhangi bir sorun yaşarsanız <a href="@Url.Action("Contact", "Home")" style="color:#007bff;">iletişim</a> sayfamızdan bize ulaşabilirsiniz.
</p>

@section Scripts {



}