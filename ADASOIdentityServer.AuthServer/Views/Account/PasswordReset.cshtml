@model PasswordResetViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <base href="../../../" />

    <title>ADASO Merkezi Giriş Sayfası</title>
    <meta charset="utf-8" />
    <meta name="description" content="ADASO Merkezi giriş sayfasına hoş geldiniz. Kullanıcı girişi yapabilir veya hesap oluşturabilirsiniz." />
    <meta name="keywords" content="ADASO,merkezi giriş, kullanıcı girişi, login, hesap, portal" />
