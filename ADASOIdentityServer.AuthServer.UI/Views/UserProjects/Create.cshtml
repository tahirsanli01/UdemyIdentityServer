@model ADASOIdentityServer.Database.Models.UserProjects

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/assets/plugins/select2/select2.min.css" rel="stylesheet" />
<div id="ModalCreateGoal" class="app-content">
    @await Component.InvokeAsync("DashBoardNavbar")
    <div class="d-flex flex-wrap flex-stack my-1">
        <h3 class="fw-bold my-2">
            Ekle
        </h3>
        <div class="d-flex my-2">
            <div class="d-flex align-items-center position-relative me-4">
                <i class="ki-outline ki-magnifier fs-3 position-absolute translate-middle-y top-50 ms-4"></i>
                <input type="text" id="kt_filter_search" class="form-control form-control-sm form-control-solid bg-body fw-semibold fs-7 w-150px ps-11" placeholder="Firma Ara" />
            </div>

            <a asp-action="Index" class='btn btn-primary btn-sm fw-bolder'> Geri</a>
        </div>
    </div>
    <hr />
    <div class="card">
        <div class="row">
            <div class="col-md-12 ml-auto">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="UserId" class="control-label"></label>
                        <select asp-for="UserId" class="form-control select2" style="width:600px !important" asp-items="ViewBag.UserId"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProjectId" class="control-label"></label>
                        <select asp-for="ProjectId" class="form-control" asp-items="ViewBag.ProjectId"></select>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Yeni Oluştur" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/assets/plugins/select2/select2.min.js"></script>
<script>    
        $("#UserId").select2();
</script>
@section Scripts {
    @{ 
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        
    }
}
