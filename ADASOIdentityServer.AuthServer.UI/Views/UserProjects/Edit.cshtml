@using ADASOIdentityServer.AuthServer.UI.Models.UserProject
@model UserProjectEditViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="ModalCreateGoal" class="app-content">
    @await Component.InvokeAsync("DashBoardNavbar")
    <div class="d-flex flex-wrap flex-stack my-1">
        <h3 class="fw-bold my-2">
            Düzenle
        </h3>
        <div class="d-flex my-2">
            <a class='btn btn-primary btn-sm fw-bolder' asp-action="Index">Geri</a>
        </div>
    </div>
    <div class="card">
        <div class="row">
            <div class="col-md-12">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="UserProject.Id" />
                    <input type="hidden" name="UserId" value="@Model.UserProject.UserId" />
                    <input type="hidden" name="ProjectId" value="@Model.UserProject.ProjectId" />
                     
                    <div class="form-group">
                        <label asp-for="UserProject.UserId" class="control-label"></label>
                        <select asp-for="UserProject.UserId"
                                class="form-control select2"
                                style="width:600px !important"
                                asp-items="ViewBag.UserId"></select>
                        <span asp-validation-for="UserProject.UserId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="UserProject.ProjectId" class="control-label"></label>
                        <select asp-for="UserProject.ProjectId"
                                class="form-control"
                                asp-items="ViewBag.ProjectId"></select>
                        <span asp-validation-for="UserProject.ProjectId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="SelectedRoleIds" class="control-label"></label>
                        <select asp-for="SelectedRoleIds"
                                class="form-control"
                                asp-items="ViewBag.SelectedRoleIds"
                                multiple="multiple">
                        </select>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Güncelle" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/assets/plugins/select2/select2.min.js"></script>
<script>
    $("#UserProject_UserId").select2();
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
