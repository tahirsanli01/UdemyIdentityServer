@model ADASOIdentityServer.Database.Models.Users


@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles {
    <link href="~/assets/plugins/select2/select2.min.css" rel="stylesheet" />
    <link href="~/assets/plugins/custom/datatables/datatables.bundle.css" rel="stylesheet" />
}
<div id="ModalCreateGoal" class="app-content">
    @await Component.InvokeAsync("DashBoardNavbar")
    <div class="d-flex flex-wrap flex-stack my-1">
        <h3 class="fw-bold my-2">
            Detay
        </h3>
        <div class="d-flex my-2">
            <a asp-action="Edit" class='btn btn-sm btn-primary fw-bolder' asp-route-id="@Model?.Id">Düzenle</a>
            <a class='btn btn-secondary btn-sm fw-bolder' asp-action="Index">Geri</a>
        </div>
    </div>
    <div class="card">
        <dl class="row">
            <dt class="col-sm-2 mb-5">
                İsim
            </dt>
            <dd class="col-sm-10 mb-5">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2 mb-5">
                Soyisim
            </dt>
            <dd class="col-sm-10 mb-5">
                @Html.DisplayFor(model => model.Surname)
            </dd>
            <dt class="col-sm-2 mb-5">
                Email
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="col-sm-2 mb-5">
                Şifre
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Password)
            </dd>
            <dt class="col-sm-2 mb-5">
                Ülke
            </dt>
            <dd class="col-sm-10 mb-5">
                @Html.DisplayFor(model => model.Country)
            </dd>
            <dt class="col-sm-2 mb-5">
                Şehir
            </dt>
            <dd class="col-sm-10 mb-5">
                @Html.DisplayFor(model => model.City)
            </dd>
            <dt class="col-sm-2 mb-5">
                Profil Fotoğrafı
            </dt>
            <dd class="col-sm-10 mb-5">
                @Html.DisplayFor(model => model.Avatar)
            </dd>
            <dt class="col-sm-2 mb-5">
                @Html.DisplayNameFor(model => model.TobbUyelikOid)
            </dt>
            <dd class="col-sm-10 mb-5">
                @Html.DisplayFor(model => model.TobbUyelikOid)
            </dd>
            <dt class="col-sm-2">
                Danışmanlığı
            </dt>
            <dd class="col-sm-10 mb-5">
                @Html.DisplayFor(model => model.Consultant.Name)
            </dd>
            <dt class="col-sm-2 mb-5">
                Departmanı
            </dt>
            <dd class="col-sm-10 mb-5">
                @Html.DisplayFor(model => model.Department.Department1)
            </dd>
            <dt class="col-sm-2 mb-5">
                Ünvanı
            </dt>
            <dd class="col-sm-10 mb-5">
                @Html.DisplayFor(model => model.PersonelTitle.Title)
            </dd>
            <dt class="col-sm-2 mb-5">
                Rol
            </dt>
            <dd class="col-sm-10 mb-5">
                @Html.DisplayFor(model => model.Role.Name)
            </dd>
        </dl>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
@await Component.InvokeAsync("DrawerMainProcess")
@await Component.InvokeAsync("DrawerSubProcess")
@await Component.InvokeAsync("DrawerAttachmentProcess")
@await Component.InvokeAsync("DrawerKPIProcess")
@await Component.InvokeAsync("DrawerSurveyProcess")