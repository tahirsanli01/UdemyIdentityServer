@using ADASOIdentityServer.AuthServer.UI.Models.ComponentViewDtos

@model List<ConsultantProcessHistoryDto>

<div class="card mb-2 mb-xl-3">
    @foreach (var item in Model)
    {
        <div class="card-body pb-0">
            <!--begin::Header-->
            <div class="d-flex align-items-center mb-5">
                <!--begin::User-->
                <div class="d-flex align-items-center flex-grow-1">
                    <!--begin::Avatar-->
                    <div class="symbol symbol-45px me-5">
                        <img src="@item.Avatar" alt="">
                    </div>
                    <!--end::Avatar-->
                    <!--begin::Info-->
                    <div class="d-flex flex-column">
                        <a href="#" class="text-gray-900 text-hover-primary fs-6 fw-bold">@item.PersonFullName</a>
                        <span class="text-gray-400 fw-bold">@item.ProcessDateTime</span>
                    </div>
                    <!--end::Info-->
                </div>
                <!--end::User-->
            </div>
            <!--end::Header-->
            <!--begin::Post-->
            <div class="mb-7">
                <!--begin::Text-->
                <div class="text-gray-800 mb-5">@item.ProcessExplanation</div>
                <!--end::Text-->
                <!--begin::Toolbar-->
                <div class="d-flex align-items-center mb-5">
                    <a href="#" class="btn btn-sm btn-light btn-color-muted btn-active-light-success px-4 py-2 me-4">
                        <i class="ki-outline ki-message-text-2 fs-2"></i>@item.TotalMessageCount
                    </a>
                    <a href="#" class="btn btn-sm btn-light btn-color-muted btn-active-light-danger px-4 py-2">
                        <i class="ki-outline ki-heart fs-2"></i>@item.TotalAttachmentCount
                    </a>
                </div>
                <!--end::Toolbar-->
            </div>
            <!--end::Post-->
            <!--begin::Separator-->
            <div class="separator mb-4"></div>
            <!--end::Separator-->
        </div>
    }
</div>