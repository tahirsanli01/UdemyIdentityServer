@model ADASOIdentityServer.Database.Models.SystemApiResources

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="ModalCreateGoal" class="app-content">
    @await Component.InvokeAsync("DashBoardNavbar")
    <div class="d-flex flex-wrap flex-stack my-1">
        <h3 class="fw-bold my-2">
            System API Resource Delete
        </h3>
        <div class="d-flex my-2">
            <a class='btn btn-secondary btn-sm fw-bolder' asp-action="Index">Geri</a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body text-center">
            <!-- Silme ikonu -->
            <div class="mb-3">
                <i class="fas fa-trash-alt fa-3x text-danger"></i>
            </div>

            <!-- Silme uyarısı -->
            <h4 class="text-danger fw-bold mb-4">
                "@Model.SystemApi" kaydını <br>kalıcı olarak silmek istediğinize emin misiniz?
            </h4>

            <!-- Form -->
            <div class="d-flex justify-content-center gap-3" style="margin-top: 30px;">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger btn-lg">
                        <i class="fas fa-check-circle me-2"></i> Silme İşlemini Tamamla
                    </button>
                </form>
                <a asp-action="Index" class="btn btn-secondary btn-lg">
                    <i class="fas fa-arrow-left me-2"></i> Geri
                </a>
            </div>
        </div>
    </div>
</div>

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">